{# Base HTML, compatible with what Vite expects #}
<!DOCTYPE html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://use.typekit.net/bqb5gxu.css">
        <title>{{title or metadata.title}}</title>
        {% if build.env == "production" %}
            {% viteLinkStylesheetTags "src/client/main.js" %}
            {% viteLinkModulePreloadTags "src/client/main.js" %}
        {% endif %}
    </head>

    <body w:h="full" w:flex="~ col">
        {{ content | safe }}
        {% if build.env == "production" %}
            {% viteScriptTag "src/client/main.js" %}
        {% else %}
            <script type="module" src="http://192.168.10.213:3000/@vite/client"></script>
            <script type="module" src="http://192.168.10.213:3000/src/client/main.js"></script>
        {% endif %}
    </body>

</html>